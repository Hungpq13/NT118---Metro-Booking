<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main_payment">

    <TextView
        android:id="@+id/payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Ví thanh toán"
        android:textColorHint="#D53C2F2F"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/payment"
        android:background="@drawable/bg_payment">
        <TextView
            android:id="@+id/text_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="150dp"
            android:textAlignment="center"
            android:textColor="@color/black"/>

        <ImageButton
            android:id="@+id/img_muiten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="93dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button"
            app:srcCompat="?attr/actionModeCloseDrawable" />
        <TextView
            android:id="@+id/hoten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_muiten"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="Họ tên"
            android:textSize="18dp"
            android:textStyle="italic"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/hienName"
            android:ems="10"
            android:inputType="text"
            android:text=""
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/hoten"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_form"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
        <TextView
            android:id="@+id/phone"
            android:text="SĐT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hienName"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:textStyle="italic"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/hienSDT"
            android:ems="10"
            android:inputType="text"
            android:text=""
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/phone"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_form"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hienSDT"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Email"
            android:textSize="18dp"
            android:textStyle="italic"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/hienEmail"
            android:ems="10"
            android:inputType="text"
            android:text=""
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/email"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_form"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
        <TextView
            android:id="@+id/loaive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại vé"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="italic"
            android:layout_below="@+id/hienEmail"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <Spinner
            android:id="@+id/sLoaive"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/loaive"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/loaive" />

        <TextView
            android:id="@+id/thanhtoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sLoaive"
            android:text="Phương thức thanh toán"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:textStyle="italic"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="26dp"
            android:text="Xác nhận thanh toán"
            android:background="@drawable/bd_xacnhan"/>

        <EditText
            android:id="@+id/Giatien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Nhập tiền thanh toán"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:textAlignment="center"/>

        <Spinner
            android:id="@+id/sThanhtoan"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/thanhtoan"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"/>

    </RelativeLayout>

</RelativeLayout>